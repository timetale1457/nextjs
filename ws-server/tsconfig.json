      "experimentalDecorators": true,
      "removeComments": true,        
      "noImplicitAny": false,
      "esModuleInterop": true,
      "outDir": "./dist"
  },
  "include": [
      "./src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}